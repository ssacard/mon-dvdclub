= render :partial => '/shared/menu' if logged_in?
.site
  #login.standard_form
    %h1 Login 
  
    -if flash[:notice] 
      #flash-notice= flash[:notice]

    - form_tag session_path do
      %label 
        Login
        %br
        = text_field_tag 'login', '', :class => :text


      %label 
        Password
        %br
        = password_field_tag 'password', '', :class => :text

      %label 
        Remember me:  
        = check_box_tag 'remember_me' 
    
      - forgot =  link_to('(forgot password)' , forgot_password_path, :class => :forgot)
      = render :partial => '/shared/submit_buttons', :locals => {:text => 'Se connecter', :more => forgot }