    %p 
      Saissisez votre mot de passe pour rejoindre ce club

    - form_tag join_dvd_club_path(@token) do
      = display_flash
      %label 
        Password
        %br
        = password_field_tag 'password', @password, :class => :text

      - fields_for :user_dvd_club do |fields|
        %p
          %label
            Votre pseudo dans ce club?:
            %br
            = fields.text_field :pseudo, :class => :text
        %p
          %label
            Comment vous identifier dans ce club?:
            %br
            = fields.text_area :description, :class => :text
      - forgot =  link_to('(forgot password)' , forgot_password_path, :class => :forgot)
      = render :partial => '/shared/submit_buttons', :locals => {:text => 'Accepter', :more => forgot }    

    %br
    %h1 
      Description du club
    = render :partial => '/users/dvdclub'
    
