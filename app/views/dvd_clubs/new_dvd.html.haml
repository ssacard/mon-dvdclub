#dvd-search
  %h4
    Add Dvds for: 
    = @dvd_club.name
  = flash[:notice]
  %br/
  - form_remote_for(:dvd, :url => {:controller => :dvds, :action => :search, :dvd_club_id => @dvd_club.id}, :loading => "Element.show('indicator')", :complete => "Element.hide('indicator')") do |f|
    = text_area_tag :title
    %br/ 
    %br/
    = submit_tag 'search'
#indicator{:style=> "display: none;"}
  =image_tag('/images/indicator.gif')
%br/
%br/
#search-results
%br/
%h4
  = link_to_function 'Manually Add a DVD', "Element.show('dvd-form')"
#dvd-form{:style => "display:none;"}
  - form_remote_for(:dvd, :url => {:controller => :dvds, :action => :create, :dvd_club_id => @dvd_club.id}, :loading => "Element.show('indicator')", :complete => "Element.hide('indicator')") do |f|
    %p
      %label
        Title
      %br/
      = text_field_tag :title
    %p
      %label
        Manufacturer
      %br/
      = text_field_tag :manufacturer
    %p
      %label
        Director
      %br/
      = text_field_tag :director
    %p
      %label
        Actors 
        = link_to_function('Add more') do |page|
          - page.insert_html :bottom, 'actors-div', "<br />" + text_field_tag('actors[]')
      %br/
      #actors-div
        = text_field_tag 'actors[]'
    %p
      = submit_tag 'Create'

    
