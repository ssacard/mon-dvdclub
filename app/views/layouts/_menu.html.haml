  .tabset

    - if object == :clubs
      %a{:href => "/dvd_clubs", :class => "active"}
        %span
          %span Mes Clubs
    - else
      %a{:href => "/dvd_clubs"}
        %span
          %span Mes Clubs

    - if object == :dvds
      %a{:href => "/home/dvds", :class => "active"}
