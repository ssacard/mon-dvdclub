!!! Strict
%html{"xmlns" => "http://www.w3.org/1999/xhtml", "xml:lang" => "en", "xmlns:fb" => "http://www.facebook.com/2008/fbml"}
  %head
    %title Mon DVD Club
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
    -if @redirect_url
      %meta{"http-equiv" => "Refresh", :content => "5;url= #{@redirect_url}"} 
    = stylesheet_link_tag 'filter', 'all', 'application'
  %body
    = fb_connect_async_js
    .page
      .page-bottom
        .page-top
          .page-width
            #header
              - unless logged_in? && ( !current_user.nil? && current_user.active?)
                %strong= link_to "monDVD", root_path
                .tab-holder
                  %div
                    %ul
                      %li= link_to content_tag(:span, t("header.create")), register_path, :class => :blue
                      %li= link_to  content_tag(:span, t("header.connect")), login_path, :class => :dark
              - else        
                %strong= link_to "monDVD", home_path, :class => :inner
                %ul.top-nav
                  %li.first= link_to t('header.account'), settings_path
                  - if fb_user
                    %li= fb_logout_link t('header.disconnect'), '/'
                  - else
                    %li= link_to t('header.disconnect'), logout_path

            = yield
  /
    #footer
      %ul
        %li= link_to 'A propos', '#'
        %li= link_to "Conditions d'utilisation", '#'
        %li= link_to 'Mentions Légales', '#'
        %li= link_to 'Vie privée', '#'
    
      Un service cr&eacute;&eacute; par 
      =link_to '@ssacard', 'http://www.twitter.com/ssacard'

  = javascript_include_tag :defaults
  = javascript_include_tag 'main'
  = yield :javascript
	
:javascript
  var uservoiceOptions = {
    /* required */
    key: 'ssacard',
    host: 'ssacard.uservoice.com', 
    forum: '78443',
    showTab: true,  
    /* optional */
    alignment: 'left',
    background_color:'#f00', 
    text_color: 'white',
    hover_color: '#06C',
    lang: 'en'
  };

  function _loadUserVoice() {
    var s = document.createElement('script');
    s.setAttribute('type', 'text/javascript');
    s.setAttribute('src', ("https:" == document.location.protocol ? "https://" : "http://") + "cdn.uservoice.com/javascripts/widgets/tab.js");
    document.getElementsByTagName('head')[0].appendChild(s);
  }
  _loadSuper = window.onload;
  window.onload = (typeof window.onload != 'function') ? _loadUserVoice : function() { _loadSuper();   _loadUserVoice(); };

	
:javascript
  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-18228312-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

