-form_for @user do |f|
  %p
    %label
      pseudo
      %br
      = f.text_field :login, :class => :text
  %p
    %label
      email:
      %br
      = f.text_field :email, :class => :text
  %p
    %label
      confirmer email:
      %br
      = f.text_field :email_confirmation, :class => :text
  %p
    %label
      mot de passe:
      %br
      = f.password_field :password, :class => :text
  %p
    %label
      confirmer mot de passe:
      %br
      = f.password_field :password_confirmation, :class => :text
  - if @dvd_club
    = render :partial => 'dvdclub'
    
  %p
    = f.check_box :accept_offers
    j'accepte de recevoir des offres des partenaires de mon DVD Club

  - if @user.new_record?
    %p
      = f.check_box :terms
      j'accepte les conditions d'utilisations
      
  = hidden_field_tag :token, @token

  = render :partial => '/shared/submit_buttons', :locals => {:text => @user.new_record? ? 'CrÃ©er' : 'Valider'}