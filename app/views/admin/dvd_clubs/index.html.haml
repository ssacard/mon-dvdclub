= render :partial => '/shared/menu' if logged_in?
.site
  %h3
    Club Topics
  %br
  %table
    %tr
      %th
        Name
      %th
        Action
      %th
        Status
    -current_objects.each do |object|
      %tr
        %td
          = object.name
        %td
          = link_to 'Edit'  , edit_admin_dvd_club_path(object)
          = link_to 'Delete', admin_dvd_club_path(object), :method => :delete, :confirm => %Q{Etes-vous s√ªr de vouloir supprimer ce club ?\rVous pouvez simplement le suspendre en allant sur "Edit"}
          = link_to 'Info'  , info_admin_dvd_club_path(object)
        %td
          = object.state 
  %br
  = link_to 'New', new_admin_dvd_club_path
  