%tr{:class => cycle('even', 'odd')}
  %td.center
    = link_to(dvd_cover(dvd), {:controller => :dvds, :action => :show, :id => dvd}) 
  %td
    %b= link_to(dvd.title, {:controller => :dvds, :action => :show, :id => dvd});
    - if dvd.owner == current_user
      - dvdclub = current_user.dvd_clubs.first
      - if dvd.booked?
        %b= dvd.booked_by_user.pseudo(dvdclub)
        = dvdclub.name
        vous Ã  empruntez
        %b= dvd.title
        =distance_of_time_in_words(Time.now, dvd.booked_at)
      %br
    -else
      %br
    format:
    = dvd.format_name
    %br
    = truncate(dvd.description, 80)
  %td
    = render :partial => 'dvds/partials/status', :locals => {:dvd => dvd}
