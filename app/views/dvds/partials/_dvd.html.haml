.product-item
  .bg-bottom
    .bg-top
      = link_to(dvd_cover(dvd), dvd_path(dvd)) 
      .info
        .heading
          = '<a href="#" class="autre">Autre</a>'
          %h3= h dvd.title
        .content-text
          =# "5.element.added"[:'5.element.added', distance_of_time_in_words(Time.now, dvd.created_at)]
          %p= truncate(dvd.description, 160)
          =# link_to "5.element.more"[:'5.element.more'], dvd_path(dvd)
      .actions
        %h4=#"5.element.owner"[:'5.element.owner', dvd.owner.default_pseudo ]
        - dvd_club = DvdClub.first_in_common(dvd.owner, current_user)
        =# "5.element.club"[:'5.element.club', dvd_club.name]
        .yellow-btn
          - form_for :dvd, :url => {:controller => :dvds, :action => :request_register} do |form|
            = hidden_field_tag 'dvd_id', dvd.id
            = link_to_function("Reserver", 'MonDVD.Form.submit(this)')
