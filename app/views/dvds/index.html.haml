= render :partial => '/layouts/menu', :locals => {:object => :dvds, :parent => :myself} if logged_in?

.main-box
  .promo-box
    .btn
      .bg-left
        = link_to content_tag(:span, content_tag(:span, "Ajouter un DVD")), new_dvd_path
    %p{}=t 'dvds.banner'

  .top-border.easyfix
    = render :partial => 'layouts/categories'
    .main.twocols
      #accueil
        %h2= render :partial => 'dvds/partials/breadcrumb'
        - if @dvds.empty?
          %p Pas de DVD actuellement dans vos club
        - else
          = render :partial => 'dvds/partials/dvds', :locals => {:dvds => @dvds}
